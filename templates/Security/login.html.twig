{% extends 'base.html.twig' %}

{%  block body %}
    {% include '_elements/_flash_messages.html.twig' %}
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path('login') }}" method="post">
    <div class="form-row" >
    <label for="username"  class="custom">Username:</label>
    <input type="text" id="username" name="_username" value="{{ last_username }}"  class="custom" />
    </div>
    <div class="form-row ">
    <label for="password"  class="custom">Password:</label>
    <input type="password" id="password" name="_password"  class="custom" />
    </div>
    {#
        If you want to control the URL the user
        is redirected to on success (more details below)
        <input type="hidden" name="_target_path" value="/account" />
    #}

    <button type="submit">login</button>
</form>

{%  endblock %}