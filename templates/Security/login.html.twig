{% extends '_bases/_security_base.html.twig' %}

{%  block body %}
    {% include '_elements/_flash_messages.html.twig' %}
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
<h1>La Cl√©mentine :: Connexion</h1>
<form action="{{ path('login') }}" method="post">
    <div class="form-row" >
    <label for="username"  class="custom">Nom d'utilisateur:</label>
        <div class="ui fluid icon input">
            <input type="text" id="username" name="_username" value="{{ last_username }}"  />
        </div>

    </div>
    <div class="form-row ">
    <label for="password"  class="custom">Mot de passe:</label>
        <div class="ui fluid icon input">
            <input type="password" id="password" name="_password"  />
        </div>


    </div>
    {#
        If you want to control the URL the user
        is redirected to on success (more details below)
        <input type="hidden" name="_target_path" value="/account" />
    #}
    <div class="one wide column">
        <button class="ui circular positive button">
            Login
        </button>
    </div>
</form>

{%  endblock %}