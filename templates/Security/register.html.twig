{% block body %}
    <h1 class="ui header"> La Cl√©mentine .::. Enregistrement </h1>
    {% include '_elements/_flash_messages.html.twig' %}
    {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'ui form'}}) }}
    <div class="two fields">
        <div class="field">
            <label for="form.username" class="custom">Nom d'utilisateur</label>
            {{ form_widget(form.username, {"attr": {"class": ""}}) }}
            {% if form.username.vars.errors|length %}
                <div class="ui pointing red basic label">
                    {{ form_errors(form.username, {"attr": {"class": ""}}) }}
                </div>
            {% endif %}
        </div>
        <div class="field">
            <label for="form.email" class="custom">Email</label>
            {{ form_widget(form.email, {"attr": {"class": ""}}) }}
            {% if form.email.vars.errors|length %}
                <div class="ui pointing red basic label">
                    {{ form_errors(form.email, {"attr": {"class": ""}}) }}
                </div>
            {% endif %}
        </div>
    </div>
    <div class="two fields">
        <div class="field">
            <label for="form.plainPassword.first" class="custom">Mot de passe</label>
            {{ form_widget(form.plainPassword.first, {"attr": {"class": ""}}) }}
        </div>
        <div class="field">
            <label for="form.email" class="custom">Verification</label>
            {{ form_widget(form.plainPassword.second, {"attr": {"class": ""}}) }}
            {% if form.plainPassword.vars.errors|length %}
                <div class="ui pointing red basic label">
                    {{ form_errors(form.plainPassword, {"attr": {"class": ""}}) }}
                </div>
            {% endif %}

        </div>
    </div>
    <div class="form-row">
        <button class=" ui positive button" type="submit">Envoi</button>
    </div>
    {{ form_end(form) }}
    </div>
