{%  extends '_bases/_security_base.html.twig' %}
{% block toolbar %}
{% endblock %}
{% block body %}

    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
    <div class="field" >
        <label for="username"  class="custom">Nom d'utilisateur:</label>
        <input type="text" id="username" name="_username"  />
    </div>
    <div class="field" >
            <label for="form.username" class="custom">Nom d'utilisateur</label>
            {{ form_widget(form.username, {"attr": {"class": ""}}) }}
        </div>
    <div class="ui red message">{{ form_errors(form.username, {"attr": {"class": "ui red message"}}) }}</div>
        <div class="form-row">
            <label for="form.email" class="custom">Email</label>
            {{ form_widget(form.email, {"attr": {"class": "custom"}}) }}
            {{ form_errors(form.email) }}
        </div>
        <div class="form-row">
            <label for="form.plainPassword.first" class="custom">Mot de passe</label>
            {{ form_widget(form.plainPassword.first, {"attr": {"class": "custom"}}) }}
            {{ form_errors(form.plainPassword.first) }}
        </div>
        <div class="form-row">
            <label for="form.plainPassword.second" class="custom">Mot de passe (verification)</label>
            {{ form_widget(form.plainPassword.second, {"attr": {"class": "custom"}}) }}
            {{ form_errors(form.plainPassword.second) }}
        </div>

        <div class="form-row">
            <button type="submit">Go</button>
        </div>
        {{ form_end(form) }}
    </div>
</div>

{% endblock %}