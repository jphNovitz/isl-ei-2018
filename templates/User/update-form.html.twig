{%  extends 'base.html.twig' %}
{% block toolbar %}
{% endblock %}
{% block body %}
    {% include '_elements/_flash_messages.html.twig' %}
    {{ form_start(form) }}
    <div class="form-row">
    <label for="form.username" class="custom">Nom d'utilisateur</label>
        {{ form_widget(form.username, {"attr": {"class": "custom"}}) }}
        {{ form_errors(form.username) }}
    </div>
    <div class="form-row">
    <label for="form.email" class="custom">Email</label>
        {{ form_widget(form.email, {"attr": {"class": "custom"}}) }}
        {{ form_errors(form.email) }}
    </div>

    <div class="form-row">
        <label for="form.plainPassword.first" class="custom">Mot de passe</label>
        {{ form_widget(form.plainPassword.first, {"attr": {"class": "custom"}}) }}
        {{ form_errors(form.plainPassword.first) }}
    </div>
    <div class="form-row">
        <label for="form.plainPassword.second" class="custom">Mot de passe (verification)</label>
        {{ form_widget(form.plainPassword.second, {"attr": {"class": "custom"}}) }}
        {{ form_errors(form.plainPassword.second) }}
    </div>

    <div class="form-row">
    <label for="form.lastName" class="custom">Nom</label>
        {{ form_widget(form.lastName, {"attr": {"class": "custom"}}) }}
        {{ form_errors(form.lastName) }}
    </div>
    <div class="form-row">
    <label for="form.firstName" class="custom">Prenom</label>
        {{ form_widget(form.firstName, {"attr": {"class": "custom"}}) }}
        {{ form_errors(form.firstName) }}
    </div>
    <div class="form-row">
    <label for="form.phone" class="custom">Téléphone</label>
        {{ form_widget(form.phone, {"attr": {"class": "custom"}}) }}
        {{ form_errors(form.phone) }}
    </div>
    <div class="form-row">
    <label for="form.street" class="custom">Rue</label>
        {{ form_widget(form.street, {"attr": {"class": "custom"}}) }}
        {{ form_errors(form.street) }}
    </div>
    <div class="form-row">
    <label for="form.streetNr" class="custom">N°</label>
        {{ form_widget(form.streetNr, {"attr": {"class": "custom"}}) }}
        {{ form_errors(form.streetNr) }}
    </div>

    <div class="form-row">
        <button type="submit">Go</button>
    </div>
    {{ form_end(form) }}
{% endblock %}