<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>

        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="//cdn.materialdesignicons.com/2.1.19/css/materialdesignicons.min.css">
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
              rel="stylesheet">
        <link href="{{ asset('build/css/app.css') }}" rel="stylesheet">
        {% block stylesheets %}{% endblock %}
    </head>
    <body>

    <div class="toolbar">
        <span id="menu-icon">
            <i class="material-icons" id="menu">menu</i>
        </span>
        <span id="title">La Clémentine</span>
    </div>

    <div id="lateral-menu">
        <ul>
            <li> <i class="material-icons">input</i> Entrée marchandises</li>
            <li> <i class="material-icons">shopping_cart</i> Commandes</li>
            <hr class="separation">
            <li> <i class="material-icons">free_breakfast</i> Produits</li>
            <li> <i class="material-icons">store</i> Fournisseurs</li>
            <li> <i class="material-icons">info</i> Allergies</li>
            <hr class="separation">
            <li> <i class="material-icons">layers</i> Ingredients</li>
            <li> <i class="material-icons">local_offer</i> Categories</li>
            <li> <i class="material-icons">assignment</i> Types</li>
            <hr class="separation">
        </ul>

    </div>
        {% block body %}{% endblock %}
    <script src="{{ asset('build/js/app.js') }}"></script>
        {% block javascripts %}{% endblock %}
    </body>
</html>
