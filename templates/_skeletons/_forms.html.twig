{%  extends '_bases/_admin_base.html.twig' %}

{% block body %}

{% include '_elements/_flash_messages.html.twig' %}

    <h1>{%  block title %} Skeleton  Form {% endblock %} </h1>

    {{ form_start(form, {attr:{
        class: 'ui form',
        novalidate : 'novalidate'}}) }}
    {{ form_errors(form) }}
        {#if not form.vars.valid %}
            <div class="form-errors">
                {{ form_errors(form) }}
            </div>
        {% endif #}
    {% block form_details %}
        {{ form_widget(form) }}
    {% endblock %}


    {% block submit %}
        <p style="margin-top: 1rem">
            <button class="ui orange positive circular button" type="submit" ><i class="ui check icon"></i> Envoi</button>
            {% block other_buttons %} {% endblock %}
        </p>
    {% endblock %}
    {{ form_end(form, {'render_rest': false}) }}



{% endblock %}
{% block right_column %}
    {% include '_elements/_action_floating_menu/_form_action_floating_menu.html.twig' %}
{% endblock %}