{% extends '_bases/_admin_base.html.twig' %}

{% block body %}

    {% include '_elements/_flash_messages.html.twig' %}
    <h1>Admininistration</h1>
    <div class="ui stackable grid">
        <div class="stackable four wide column">
            <!---------------------->
            <!-- orders/carts list ->
            <!---------------------->
            <div class="ui red card">
                <div class="content">
                    <i class="circular right floated shopping cart icon"></i>
                    <div class="header">
                        Commandes
                    </div>
                    <div class="description">
                        {% include '_elements/_loop_carts_list.html.twig' with {
                            'objects': carts, 'max': 25} %}
                    </div>
                    <a class="ui fluid blue button"
                       style="margin-top: 1rem;"
                       href="{{ path('carts_list') }}">
                       Liste
                    </a>
                </div>
            </div>
        </div>


        <div class="four wide column">
            <!---------------------->
            <!-- products  list    ->
            <!---------------------->
            <div class="ui green card">
                <div class="content">
                    <i class="circular right floated utensils icon"></i>
                    <div class="header">
                        Produits
                    </div>
                    <div class="description">
                        {% include '_elements/_loop_entity_list.html.twig' with {
                            'objects': products, 'max': 20} %}
                    </div>
                    <a class="ui fluid blue button"
                       style="margin-top: 1rem;"
                       href="{{ path('products_list') }}">
                            Liste
                    </a>
