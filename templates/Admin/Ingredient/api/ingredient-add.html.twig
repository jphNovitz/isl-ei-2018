        </div>


        <div class="two wide centered column">
            <button class="fluid ui huge blue button"
                    @click="getInfos()" >
                CODE
            </button>
            <button class="fluid ui huge green button">
                <i class="plus icon"></i>
            </button>
            <button class="fluid ui huge red button"
                    @click="resetInfos()" >
                <i class="sync alternate icon"></i>
            </button>
        </div>


        <div class="six wide column">
            <div class="ui card centered">
                <div class="ui medium image ">
                    <img :src="product.image_url" class="ui mini image">
                </div>
            </div>
            <div class="ui card centered">
                <div class="ui medium image ">
                    <img :src="product.image_ingredients_url" class="ui mini image">
                </div>
            </div>
            <div class="ui card centered">
                <div class="ui medium image ">
                    <img :src="product.image_nutrition_url" class="ui mini image">
                </div>
            </div>
        </div>

    </div>


