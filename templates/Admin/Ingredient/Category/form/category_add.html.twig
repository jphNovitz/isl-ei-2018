{% extends '_skeletons/_forms.html.twig' %}

{% block title %}Ajout d'une cat√©gorie d'ingredient{% endblock %}
    {% block form_details %}
<div class="ui stackable grid">
    <div class="eight wide column">
        <div class="field">
            <label for="form_name" >Nom</label>
            {{ form_widget(form.name) }}
        </div>
        {% if form.name.vars.errors|length %}
            <div class="ui pointing red basic label">
                {{ form_errors(form.name, {"attr": {"class": "form-error"}}) }}
            </div>
        {% endif %}
        <div class="field">
            <label for="form_comment" >Comment</label>
            {{ form_widget(form.comment) }}
        </div>
        {% if form.comment.vars.errors|length %}
            <div class="ui pointing red basic label">
                {{ form_errors(form.comment) }}
            </div>
        {% endif %}
    </div>
</div>
    {% endblock %}
