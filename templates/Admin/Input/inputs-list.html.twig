{% extends '_skeletons/_list.html.twig' %}
{% set entity = "inputs" %}
{%  block title %}Entr√©es de marchandises {% endblock %}
     {% block element_title %}
         <a href="{{ path(entity ~ '_show', {'slug' : object.slug}) }}">
             {{ object.provider.name }}
             ({{ object.created|date('d/m/y') }})
         </a>
     {% endblock %}
        {% block show %}
            <a href="{{ path(entity ~ '_show', {'slug' : object.slug}) }}" class="ui blue circular tiny icon button">
                <i class="zoom icon"></i>
            </a>
        {% endblock %}
        {% block update %}
            <a href="{{ path(entity ~ '_update', {'slug' : object.slug}) }}" class="ui olive circular tiny icon button">
                <i class="edit icon"></i>
            </a>
        {% endblock %}
        {% block delete %}
            <a href="{{ path(entity ~ '_delete', {'slug' : object.slug}) }}" class="ui red circular tiny icon button">
                <i class="delete icon"></i>
            </a>
        {% endblock %}

